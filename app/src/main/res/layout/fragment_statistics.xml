<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".StatisticsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="Category Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:text="FBLA Organization"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Competitive Events"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Business Skills"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:text="National Officers"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Parliamentary\nProcedure"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="National Conference"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="FBLA History"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="FBLA Bylaws"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Creed, National Goals, and Ethics"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Community Service"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />

                        <TextView
                            android:text="Quick Quiz"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="textStart"
                            android:textSize="14sp"
                            android:paddingRight="5dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="580dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView25"
                            android:text="Category Points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:id="@+id/org"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/events"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/skills"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/officers"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/procedure"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/conference"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/history"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/bylaws"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/creed"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/service"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />

                        <TextView
                            android:id="@+id/misc"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            tools:text="1000" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Points"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        tools:text="1000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Points"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/avg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        tools:text="1000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>